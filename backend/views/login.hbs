<!-- Login Section -->
<section class="page-section" id="login">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mt-0">Bejelentkezés</h2>
        <hr class="divider my-4">
      </div>
    </div>
    <div class="row justify-content-center">
      <form>
        <div class="form-group">
          <label for="inputEmail1">Email cím</label>
          <input type="email" class="form-control" name="email" id="inputEmail1" aria-describedby="emailHelp" required>
          <small id="emailHelp" class="form-text text-muted">Soha nem osztjuk meg e-mail címedet senki mással.</small>
        </div>
        <div class="form-group">
          <label for="inputPassword1">Jelszó</label>
          <input type="password" class="form-control" name="password" id="inputPassword1" required>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Bejelentkezés</button>
        <hr class="divider my-4">
        <div class="text-center">
          <a class="small" href="/forgot-password">Elfelejtett jelszó?</a>
        </div>
      </form>
    </div>
  </div>


</section>