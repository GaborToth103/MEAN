<!-- Contact Section -->
<section class="page-section" id="contact">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mt-0">Lépj kapcsolatba velünk!</h2>
        <hr class="divider my-4">
        <p class="text-muted mb-5">Készen állunk, hogy elkezdjük a következő projektet együtt! Hívjon minket vagy küldjön nekünk egy e-mailt, és amint lehetőségünk van rá, mielőbb válaszolunk Önnek!</p>
      </div>
    </div>
    <div class="row justify-content-center">
      <form>
        <div class="form-row">
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">Keresztnév</label>
            <input type="text" class="form-control" name="firstname" id="validationDefault01" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationDefault02">Vezetéknév</label>
            <input type="text" class="form-control" name="lastname" id="validationDefault02" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationDefault03">Telefonszám</label>
            <input type="text" class="form-control" name="phone" id="validationDefault03" required>
          </div>
        </div>
        <div class="form-group">
          <label for="messageFormControlTextarea1">Üzenet</label>
          <textarea class="form-control" name="message" id="messageFormControlTextarea1" rows="3" required></textarea>
        </div>
        <button class="btn btn-primary btn-block" type="submit">Beküldés</button>
      </form>
    </div>
  </div>
</section>